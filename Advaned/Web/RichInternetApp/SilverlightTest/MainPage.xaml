<UserControl x:Class="SilverlightTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Width="260" Height="110">

    <Border BorderBrush="Blue" BorderThickness="4">
        <StackPanel Background="Gray">
            <TextBlock Name="outputTextBlock" Text="Hello Silverlight" FontSize="18" HorizontalAlignment="Left" Margin="10" />
            <Button Name="timeButton" Content="Show Time!" HorizontalAlignment="Left" Margin="10" Click="timeButton_Click" />
        </StackPanel>
    </Border>
</UserControl>
